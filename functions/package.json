    "firebase-functions": "^3.11.0",
    "firebase-functions-helper": "^0.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.9",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "^2.22.0",
    "firebase-functions-test": "^0.2.0",
    "prettier": "^2.2.1",
    "typescript": "^3.8.0"
  },
